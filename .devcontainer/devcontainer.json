// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-postgres
{
    "name": "NPG",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/app/${localWorkspaceFolderBasename}",
    "features": {},

    // Features to add to the dev container. More info: https://containers.dev/features.
    // "features": {},

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // This can be used to network with other containers or with the host.
    // "forwardPorts": ["8550:3000","8551:3001", "8552:5432"],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "npm config set registry https://registry.npmmirror.com && npm -g install pnpm && pnpm run install",
    "customizations": {
        "vscode": {
            "extensions": [
                "emmanuelbeziat.vscode-great-icons",
                "cweijan.vscode-database-client2",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "MisterJ.vue-volar-extention-pack",
                "kamikillerto.vscode-colorize",
                "oderwat.indent-rainbow",
                "editorconfig.editorconfig",
                "isudox.vscode-jetbrains-keybindings"
            ],
            "settings": {
                "files.autoSave": "onFocusChange",
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": false,
                    "eslint.autoFixOnSave": true
                },
                "editor.cursorSmoothCaretAnimation": "on",
                "editor.smoothScrolling": true,
                "editor.fontLigatures": true,
                "eslint.format.enable": true,
                "colorize.languages": [
                    "javascript",
                    "javascriptreact",
                    "typescript",
                    "typescriptreact"
                ],
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "[vue]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[jsonc]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "editor.formatOnSave": true,
                "prettier.tabWidth": 4,
                "prettier.trailingComma": "none",
                "prettier.useTabs": true,
                "prettier.singleQuote": true,
                "prettier.semi": false,
                "prettier.endOfLine": "auto"
            }
        }
    },

    // Configure tool-specific properties.
    // "customizations": {},

    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    "remoteUser": "root"
}
